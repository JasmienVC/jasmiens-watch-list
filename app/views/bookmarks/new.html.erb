<div class="navbar-lewagon p-4 m-2">
  <div class="d-flex flex-row justify-content-between align-items-center flex-wrap">
    <h1>Add a new bookmark</h1>
    <p><%= link_to "Back", list_path(@list) %></p>
  </div>
</div>

<div class="my-4 mx-2 p-4 border bg-white">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.button :submit %>
  <% end %>
</div>
