<div class="navbar-lewagon p-4 m-2">
  <div class="d-flex flex-row justify-content-between align-items-center">
    <h1>My lists</h1>
    <p><%= link_to "New list", new_list_path %></p>
  </div>
</div>

<% if @lists %>
  <div class="d-flex flex-row flex-wrap my-2 mx-5">
    <% @lists.each do |list| %>
      <div class="border justify-content-between m-2 p-2">
        <%= cl_image_tag list.photo.key, height: 250, width: 250, crop: :thumb, gravity: :face %>
        <div class="p-2 text-center">
          <%= link_to list.name, list_path(list)%>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
